---
interface Props {
  title: string;
}
import { Image } from "astro:assets";
import { ViewTransitions } from "astro:transitions";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="claudio Quiroz fullstack developer" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.jpg" />
    <link rel="shortcut icon" href="/logo.jpg" />
    <meta property="og:image" content="avatar.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <div class="wrapper">
      <slot />
      <div class="backgroundContainer">
        <Image
          class="svgBackground"
          width={360}
          height={800}
          src="./svg/main-background.svg"
          alt=""
        />
      </div>
      <style>
        body {
          background: rgb(0, 107, 222);
          background: radial-gradient(
            circle,
            rgba(0, 107, 222, 1) 0%,
            rgba(0, 2, 10, 1) 51%,
            rgba(0, 2, 10, 1) 100%
          );
          padding: 1rem;
          height: 100vh;
          width: 100%;
        }
        .wrapper {
          padding: 0.5rem;
          height: 100%;
        }
        .backgroundContainer {
          position: fixed;
          top: 0;
          left: 0;
          width: 100vw;
          height: 100%;
          z-index: -1;
          padding: 1rem;
        }
        .svgBackground {
          width: 100vw;
          height: 100%;
        }
      </style>
    </div>
  </body><!-- 00FFFF --><!-- 006BDE --><!-- 00020A  rgba(0, 107, 222, 0.3);-->
</html>
