---
import Layout from "../layouts/Layout.astro";
import { technologies } from "../data/technologies.ts";
import Certificates from "../components/certificates.astro";
import Experience from "../components/experience.astro";
import Projects from "../components/projects.astro";
import Technologies from "../components/technologies.astro";
import Avatar from "../components/avatar.astro";
import LayoutGrid from "../layouts/layout-grid.astro";
import TechnologiesCard from "../components/technologies-card.astro";
---

<Layout title="Welcome to Astro.">
  <LayoutGrid topLetf={1} topRight={2} bottomLeft={3} bottomRight={4}>
    <Avatar slot="top-left" variant="2" />
    <Projects slot="top-left-2" />
    <Technologies slot="top-right" />
    <Certificates slot="bottom-right" />
    <Experience slot="bottom-left" />
    <main class="main">
      {
        technologies.map((technology) => (
          <TechnologiesCard technology={technology} />
        ))
      }
    </main>
  </LayoutGrid>
</Layout>
<style>
  .main {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    grid-gap: 1rem;
    padding: 1rem;
  }
</style>
