---
import type { Certificate } from "../data/certificates";

interface Props {
  certificate: Certificate;
}

const { certificate } = Astro.props;
---

<div class="certificate">
  <img class="image" src={certificate.certificates_image} alt="" />
  <h2 class="title">{certificate.title}</h2>
  <p class="description">{certificate.description}</p>
</div>

<style>
  .certificate {
    padding: 1rem;
    border: 1px solid #006bde;
    border-radius: 0.5rem;
    display: grid;
    grid-template-columns: 1fr 2fr;
    grid-row: auto auto;
    grid-gap: 1rem;
  }
  .image {
    width: 100%;
    height: 100%;
    grid-column: 1/2;
    object-fit: contain;
    object-position: top center;
    grid-row: 1/3;
  }
  .title {
    font-size: 1rem;
    font-weight: bold;
    margin: 0;
    grid-column: 2/3;
    color: #00ffff;
    text-shadow: 1px 1px 5px #006bde;
  }
  .description {
    font-size: 0.7rem;
    margin: 0;
    grid-column: 2/3;
    color: #00ffff;
  }
</style>
