---
import type { Project } from "../data/projects";
import { Image } from "astro:assets";
interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="certificate">
  <svg
    class="svg"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 100 30"
    preserveAspectRatio="none"
  >
    <path
      d="M 5 0 H 25 L 30 5 H 40 L 45 0 H 95 L 100 5 V 25 
    L 95 30 H 75 L 70 25 H 35 L 30 30 H 5 L 0 25 V 5 
    Z"
    ></path>
    <path class="path" d="M 30 0 H 40 L 37.5 2.5 H 32.5 L 30 0 
    Z"></path>
    <path class="path" d="M 35 30 L 37.5 27.5 H 67.5 L 70 30 
    Z"></path>
    <style>
      path {
        fill: rgba(0, 107, 222, 0.3);
        stroke: #006bde;
        stroke-width: 0.5;
      }
    </style>
  </svg>
  <Image
    width={100}
    height={100}
    class="image"
    src={project.projectImage}
    alt=""
  />
  <h2 class="title">{project.title}</h2>
  <p class="description">{project.description}</p>
  {
    project.urlGithub && (
        <a class="linkGitHub" 
        target="_blank"
        href={project.urlGithub}>
    <svg
      class="svgLink"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 100 30"
      preserveAspectRatio="none"
    >
      <path
        class="path"
        d="M 5 0  H 40 L 45 5 H 55 L 60 0 H 95 L 100 5 V 15 
      L 85 30  H 15 L 0 15 V 5 
      Z"
      ></path>
      <text x="20" y="22" font-family="Verdana" font-size="15" class="text">
        GitHub</text>
      <style>
        .path {
          fill: #00ffff;
          stroke: none;
          stroke-width: 0.5;
        }
        .text {
          fill: #00020a;
          font-weight: bold;
          text-shadow: 1px 1px 5px #006bde;
        }
      </style>
    </svg>
  </a>
    )
  }
  {
    project.urlWeb && (
        <a class="linkWeb" 
        target="_blank"
        href={project.urlWeb}>
    <svg
      class="svgLink"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 100 30"
      preserveAspectRatio="none"
    >
      <path
        class="path"
        d="M 5 0  H 40 L 45 5 H 55 L 60 0 H 95 L 100 5 V 15 
      L 85 30  H 15 L 0 15 V 5 
      Z"
      ></path>
      <text x="34" y="22" font-family="Verdana" font-size="15" class="text">
        Link</text>
      <style>
        .path {
          fill: #00ffff;
          stroke: none;
          stroke-width: 0.5;
        }
        .text {
          fill: #00020a;
          font-weight: bold;
          text-shadow: 1px 1px 5px #006bde;
        }
      </style>
    </svg>
  </a>
    )
  }

  
</div>

<style>
  .certificate {
    padding: 1rem;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-row: auto auto;
    grid-gap: 0.5rem 3rem;
    position: relative;
  }
  .svg {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
  }
  .image {
    width: 100%;
    height: 100%;
    grid-column: 1/2;
    grid-row: 1/3;
    object-fit: contain;
    object-position: center;
  }
  .title {
    font-size: 1rem;
    font-weight: bold;
    margin: 0;
    grid-column: 2/4;
    color: #00ffff;
    text-align: right;
    text-shadow: 1px 1px 5px #006bde;
  }
  .description {
    font-size: 0.7rem;
    margin: 0;
    grid-column: 2/4;
    color: #00ffff;
  }
  .linkGitHub {
    grid-column: 1/2;
  }
  .linkWeb {
    grid-column: 3/4;
  }
  .svgLink {
    width: 100%;
    height: 100%;
  }
</style>
