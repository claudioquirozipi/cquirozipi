---
import type { Project } from "../data/projects";
import { Image } from "astro:assets";
interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="main">
  <Image
    width={100}
    height={100}
    class="image"
    src={project.projectImage}
    alt=""
  />
  <h2 class="title">{project.title}</h2>
  <p class="description">{project.description}</p>
</div>

<style>
  .main {
    padding: 1rem;
    border: 1px solid #006bde;
    border-radius: 0.5rem;
    display: grid;
    grid-template-columns: 1fr 2fr;
    grid-row: auto auto;
    grid-gap: 1rem;
  }
  .image {
    width: 100%;
    height: 100%;
    grid-column: 1/2;
    object-fit: contain;
    object-position: top center;
    grid-row: 1/3;
  }
  .title {
    font-size: 1rem;
    font-weight: bold;
    margin: 0;
    grid-column: 2/3;
    color: #00ffff;
    text-shadow: 1px 1px 5px #006bde;
  }
  .description {
    font-size: 0.7rem;
    margin: 0;
    grid-column: 2/3;
    color: #00ffff;
  }
</style>
